{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/snd-sweden/data-storage-information-interface/schema.json",
  "title": "Research data manifest via RO-Crate 1.1",
  "type": "object",
  "properties": {
    "@context": {
      "const": "https://w3id.org/ro/crate/1.1/context",
      "default": "https://w3id.org/ro/crate/1.1/context"
    },
    "@graph": {
      "type": "array",
      "description": "Used to express a RDF graph.",
      "contains": {
        "$ref": "#/$defs/manifest"
      },
      "items": {
        "oneOf": [
          {
            "$ref": "#/$defs/manifest"
          },
          {
            "$ref": "#/$defs/organization"
          },
          {
            "$ref": "#/$defs/person"
          },
          {
            "$ref": "#/$defs/propertyvalue"
          },
          {
            "$ref": "#/$defs/dataset"
          },
          {
            "$ref": "#/$defs/file"
          },
          {
            "$ref": "#/$defs/other"
          }
        ]
      }
    }
  },
  "required": [
    "@context",
    "@graph"
  ],
  "$defs": {
    "manifest": {
      "type": "object",
      "properties": {
        "@id": {
          "const": "ro-crate-metadata.json",
          "default": "ro-crate-metadata.json"
        },
        "@type": {
          "const": "CreativeWork",
          "default": "CreativeWork"
        },
        "identifier": {
          "type": "string",
          "format": "uuid"
        },
        "publisher": {
          "type": "object"
        },
        "creator": {
          "type": "array"
        },
        "about": {
          "type": "object",
          "properties": {
            "@id": {
              "type": "string",
              "const": "./",
              "default": "./"
            }
          },
          "required": [
            "@id"
          ]
        },
        "conformsTo": {
          "type": "object",
          "properties": {
            "@id": {
              "const": "https://w3id.org/ro/crate/1.1",
              "default": "https://w3id.org/ro/crate/1.1"
            }
          }
        }
      },
      "required": [
        "@id",
        "@type",
        "identifier",
        "about"
      ]
    },
    "organization": {
      "type": "object",
      "properties": {
        "@type": {
          "const": "Organization",
          "default": "Organization"
        },
        "@id": {
          "type": "string",
          "description": "ROR ID if available"
        },
        "identifier": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "@id": {
                "type": "string"
              }
            },
            "required": [
              "@id"
            ]
          }
        }
      },
      "required": [
        "@type",
        "identifier"
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "@type": {
          "const": "Person",
          "default": "Person"
        },
        "@id": {
          "type": "string",
          "description": "ORCID if available or local id"
        },
        "identifier": {
          "type": "array",
          "description": "Reference to PropertyValue object containing eduPersonPrincipalName",
          "items": {
            "type": "object",
            "properties": {
              "@id": {
                "type": "string"
              }
            },
            "required": [
              "@id"
            ]
          }
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "required": [
        "@type",
        "identifier"
      ]
    },
    "propertyvalue": {
      "type": "object",
      "description": "Used to describe key-value pairs for domain and eduPersonPrincipalName",
      "properties": {
        "@id": {
          "type": "string"
        },
        "@type": {
          "const": "PropertyValue",
          "default": "PropertyValue"
        },
        "propertyID": {
          "type": "string",
          "examples": [
            "domain",
            "eduPersonPrincipalName"
          ]
        },
        "value": {
          "type": "string",
          "examples": [
            "gu.se",
            "xperson@gu.se"
          ]
        }
      },
      "required": [
        "@type",
        "@id",
        "propertyID",
        "value"
      ]
    },
    "dataset": {
      "type": "object",
      "properties": {
        "@id": {
          "type": "string",
          "description": "Relative file path of dataset, should be the string './'",
          "default": "./"
        },
        "@type": {
          "const": "Dataset",
          "default": "Dataset"
        },
        "name": {
          "type": "string"
        },
        "hasPart": {
          "type": "array"
        }
      },
      "required": [
        "@id",
        "@type"
      ]
    },
    "file": {
      "type": "object",
      "properties": {
        "@id": {
          "type": "string",
          "description": "Relative file path from dataset root",
          "examples": [
            "directory/data.csv"
          ]
        },
        "@type": {
          "const": "File",
          "default": "File"
        },
        "contentSize": {
          "type": "integer",
          "minimum": 0
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-fA-F0-9]{64}$",
          "description": "Checksum for the file using SHA-256"
        },
        "encodingFormat": {
          "type": "string",
          "description": "Media Type, https://schema.org/encodingFormat",
          "examples": [
            "text/csv"
          ]
        },
        "dateCreated": {
          "type": "string",
          "format": "date-time",
          "description": "Date of creation, https://schema.org/dateCreated"
        },
        "dateModified": {
          "type": "string",
          "format": "date-time",
          "description": "Date when object was most recently modified, https://schema.org/dateModified"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL for the content of the object, https://schema.org/url",
          "examples": [
            "https://example.com/datasets/42/directory/data.csv"
          ]
        }
      },
      "required": [
        "@id",
        "@type"
      ]
    },
    "other": {
      "type": "object",
      "properties": {
        "@type": {
          "not": {
            "type": "string",
            "enum": [
              "CreativeWork",
              "Dataset",
              "File",
              "Person",
              "Organization",
              "PropertyValue"
            ]
          }
        }
      }
    }
  }
}