{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/snd-sweden/data-storage-information-interface/schema.json",
  "title": "Research data manifest via ro-crate 1.1",
  "type": "object",
  "properties": {
    "@context": {
      "const": "https://w3id.org/ro/crate/1.1/context",
      "default": "https://w3id.org/ro/crate/1.1/context"
    },
    "@graph": {
      "type": "array",
      "description": "Used to express a rdf graph.",
      "contains": {
        "$ref": "#/$defs/manifest"
      },
      "items": {
        "oneOf": [
          {
            "$ref": "#/$defs/manifest"
          },
          {
            "$ref": "#/$defs/dataset"
          },
          {
            "$ref": "#/$defs/file"
          },
          {
            "$ref": "#/$defs/other"
          }
        ]
      }
    }
  },
  "required": ["@context", "@graph"],

  "$defs": {

    "manifest": {
      "type": "object",
      "properties": {
        "@id": {
          "const": "ro-crate-metadata.json"
        },
        "@type": {
          "const": "CreativeWork"
        },
        "identifier":{
          "type": "string",
          "format": "uuid"
        },
        "creator": {
          "$ref": "#/$defs/creator"
        },
        "about" : {
          "type": "object"
        },
        "conformsTo" : {
          "type": "object",
          "properties": {
            "@id":  {
              "const": "https://w3id.org/ro/crate/1.1",
              "default": "https://w3id.org/ro/crate/1.1"
            }
          }
        }
      },
      "required": ["@id", "@type", "identifier"]
    },

    "dataset": {
      "type": "object",
      "properties": {
        "@id": {
          "type": "string",
          "description": "Relative file path of dataset, should be the string './'",
          "default": "./"
        },
        "@type": {
          "const": "Dataset"
        },
        "name": {
          "type": "string"
        },
        "hasPart": {
          "type": "array"
        }
      },
      "required": ["@id", "@type"]
    },

    "file": {
      "type": "object",
      "properties": {
        "@id": {
          "type": "string",
          "description": "Relative file path from dataset root",
          "example": "directory/data.csv"
        },
        "@type": {
          "const": "File"
        },
        "contentSize": {
          "type": "integer",
          "minimum": 0
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-fA-F0-9]{64}$",
          "description": "Checksum for the file using SHA-256"
        },
        "encodingFormat": {
          "type": "string",
          "description": "Media Type, https://schema.org/encodingFormat",
          "example": "text/csv"
        },
        "dateCreated": {
          "type": "string",
          "format": "date-time",
          "description": "Date of creation, https://schema.org/dateCreated"
        },
        "dateModified": {
          "type": "string",
          "format": "date-time",
          "description": "Date when object was most recently modified, https://schema.org/dateModified"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL for the content of the object, https://schema.org/url",
          "example": "https://example.com/datasets/42/directory/data.csv"
        }
      },
      "required": ["@id", "@type"]
    },

    "other": {
      "type": "object",
      "properties": {
        "@type": {
          "not": {
            "type": "string",
            "enum": ["CreativeWork", "Dataset", "File"]
          }
        }
      }
    },

    "creator": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "const": "Person"
          },
          "@id": {
            "type": "string",
            "format": "uri",
            "description": "ORCID if available"
          },
          "identifier": {
            "type": "array",
            "contains": {
              "type": "object",
              "properties": {
                "@type": {
                  "const": "PropertyValue"
                },
                "propertyID": {
                  "const": "eduPersonPrincipalName",
                  "description": "https://wiki.refeds.org/display/STAN/eduPerson+2021-11#eduPerson202111-eduPersonPrincipalName"
                },
                "propertyValue": {
                  "type": "string"
                }
              }
            }
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        }
      },
      "required": ["@type", "identifier"]
    },

    "publisher": {
      "type": "object",
      "properties": {
        "@type": {
          "const": "Organization"
        },
        "@id": {
          "type": "string",
          "format": "uri",
          "Description": "ROR ID if available"
        },
        "identifier": {
          "type": "array",
          "contains": {
            "type": "object",
            "properties": {
              "@type": {
                "const": "PropertyValue"
              },
              "propertyID": {
                "const": "domain"
              },
              "propertyValue": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": ["@type", "identifier"]
    }
  }
}